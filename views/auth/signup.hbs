<div id="login-form">
  <h2 class="signup-color2">Sign Up</h2>
  <form action="/auth/signup" method="POST">
<div class="username2">
    <label class="signup-color"> Username
      <input type="text" name="username" placeholder="Your username" />
    </label>
</div>
<div class="username2">
    <label class="signup-color"> Password
      <input type="password" name="password" placeholder="Your password" />
    </label>
</div>
<div class="username2">
    <button id="button-signup" type="submit">Sign Up</button>
</div>
<div class="username2">
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </div>
  </form>
</div>
<hr>