<container id="container-trainings">
<div class="container">
    <h1>Training detail</h1>
    <p><b>Date:</b> {{training.date}}</p>
    <p><b>Distance:</b> {{training.distance}}</p>
    <p><b>Time:</b> {{training.time}}</p>
    <p><b>Pace:</b> {{training.pace}}</p>
    <button><a href="/trainings/{{training._id}}/edit">Edit {{training.exercise}}</a></button>
    <form action="/trainings/{{training._id}}/delete" method="POST">
        <button type="submit">Delete {{training.exercise}}</button>
    </form>
</div></container>
