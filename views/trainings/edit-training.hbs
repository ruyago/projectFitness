<div class="container">
    <h2>Edit {{trainings.name}}</h2>
    <form action="/trainings/edit" method="POST">
        <label for="name">Name: </label>
        <input type="text" name="name" id="name" value="{{training.name}}">

        <label for="occupation">Occupation: </label>
        <input type="text" name="occupation" id="occupation" value="{{training.occupation}}">

        <label for="catchPhrase">Catch phrase: </label>
        <input type="text" name="catchPhrase" id="catchPhrase" value="{{training.catchPhrase}}">

        <button type="submit">Save</button>
    </form>
</div>